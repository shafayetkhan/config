# split in horizontal orientation
bindsym $mod+b split h
bindsym $mod+Shift+B layout splith

# split in vertical orientation
bindsym $mod+V split v
bindsym $mod+Shift+V layout splitv

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+q focus parent
# focus the child container
bindcode $mod+Shift+Q focus child

# ---------------------------------------------------------------------------
#                                    Resize
# ---------------------------------------------------------------------------

# Resize
mode "resize" {
    bindcode 64 mode "default"
    # These bindings trigger as soon as you enter the resize mode
    # They resize the border in the direction you pressed, e.g.
    # when pressing left, the window is resized so that it has
    # more space on its left
    bindsym $mod+Shift+H     resize shrink left 2 px or 2 ppt
    bindsym $mod+h           resize grow   left 2 px or 2 ppt
    bindsym $mod+Shift+J     resize shrink down 2 px or 2 ppt
    bindsym $mod+j           resize grow   down 2 px or 2 ppt
    bindsym $mod+Shift+K     resize shrink up 2 px or 2 ppt
    bindsym $mod+k           resize grow   up 2 px or 2 ppt
    bindsym $mod+Shift+L     resize shrink right 2 px or 2 ppt
    bindsym $mod+l           resize grow   right 2 px or 2 ppt
    # same bindings, but for the arrow keys
    bindsym $mod+Shift+Left  resize shrink left 2 px or 2 ppt
    bindsym $mod+Left resize grow   left 2 px or 2 ppt
    bindsym $mod+Shift+Down  resize shrink down 2 px or 2 ppt
    bindsym $mod+Down        resize grow   down 2 px or 2 ppt
    bindsym $mod+Shift+Up    resize shrink up 2 px or 2 ppt
    bindsym $mod+Up          resize grow   up 2 px or 2 ppt
    bindsym $mod+Shift+Right resize shrink right 2 px or 2 ppt
    bindsym $mod+Right       resize grow   right 2 px or 2 ppt
}
bindsym $mod+r mode "resize"

# ---------------------------------------------------------------------------
#                                    Applications
# ---------------------------------------------------------------------------

mode apps {
    bindcode 64 mode "default"
    bindsym $mod+m mode "music-apps"
    bindsym $mod+p mode "prog-apps"
    bindsym $mod+s mode "sys-apps"
    bindsym $mod+w mode "web-apps"
}
bindsym $mod+a mode "apps"

mode music-apps {
    bindcode 64 mode "default"

    bindsym $mod+g exec grooveshark
    bindsym $mod+p exec psytrancepower
}

mode prog-apps {
    bindcode 64 mode "default"

    bindsym $mod+e exec emacs
    bindsym $mod+y exec yEd
}

mode sys-apps {
    bindcode 64 mode "default"

    bindsym $mod+d exec dconf-editor
    bindsym $mod+t exec urxvt
    bindsym $mod+Shift+T exec xcwd | xargs urxvt -cd
}

mode web-apps {
    bindcode 64 mode "default"

    bindsym $mod+c exec chromium-browser
    bindsym $mod+f exec freenode
    bindsym $mod+G exec googegroups
}

# start a terminal
bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec xcwd | xargs urxvt -cd

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -i -b -p 'Launch Application -> ' -nb '#002b36' -nf '#657b83' -sb '#859900' -sf '#eee8d5'
bindsym $mod+g exec ~/.i3/scripts/winmenu.py

# lock
bindsym $mod+z exec i3lock -i ~/.img/ubisoft.png

# Special window properties
for_window [class="Emacs"] border none
for_window [class="Chromium"] border 1pixel
for_window [title="yEd"] border 1pixel
for_window [title="urxvt"] border 1pixel

# ---------------------------------------------------------------------------
#                                    Multimedia
# ---------------------------------------------------------------------------

# volume bindings
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

